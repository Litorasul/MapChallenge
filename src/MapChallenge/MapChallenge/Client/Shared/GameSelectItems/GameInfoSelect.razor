@using MapChallenge.Client.Game
@inject IGameStartInfo GameStartInfo

<h3>@GameStartInfo.Continent.ToString() > @GameStartInfo.Subject.ToString() > @GameStartInfo.IsShortGame</h3>

@if (this.GameStartInfo.Continent == GameContinentType.NotSelected)
{
    <ContinentsCardDeck />

}
else if (this.GameStartInfo.Subject == GameSubjectType.NotSelected && this.GameStartInfo.Continent != GameContinentType.NorthAmerica)
{
    <CountrySubjectCardDeck />
}
else if (this.GameStartInfo.Subject == GameSubjectType.NotSelected && this.GameStartInfo.Continent == GameContinentType.NorthAmerica)
{
    <StateSubjectCardDeck />
}
else
{
    <ChooseGameSize />
}
@code
{
    protected override void OnInitialized()
    {
        this.GameStartInfo.OnChange += this.StateHasChanged;
    }
}
